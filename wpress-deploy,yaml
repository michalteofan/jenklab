apiVersion: apps/v1
kind: Deployment
metadata:
  name: APPNAME
  labels:
    app: APPNAME
spec:
  selector:
    matchLabels:
      app: APPNAME
  replicas: 1
  template:
    metadata:
      labels:
        app: APPNAME
    spec:
      containers:
      - name: APPNAME
        image: IMAGE
        envFrom:
          - secretRef:
              name: wpress
        env:
          - name: WORDPRESS_DB_HOST
            value: IPADDR
        ports:
        - containerPort: 80
          name: APPNAME
      nodeSelector:
        beta.kubernetes.io/arch: ppc64le
